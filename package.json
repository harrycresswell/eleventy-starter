{
  "name": "11ty-starter",
  "version": "1.0.0",
  "description": "A starter project for 11ty powered websites with SCSS support.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass --output-style compressed -o src/site/_includes/css src/scss",
    "serve": "eleventy --serve",
    "watch:css": "onchange 'src/scss' -- npm run scss",
    "start": "run-p serve watch:css",
    "clean": "rm -rf _site/*",
    "build": "npm run clean && eleventy"

  },
  "keywords": ["eleventy", "Sass"],
  "author": "Harry Cresswell",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.8.3",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0"
  }
}
